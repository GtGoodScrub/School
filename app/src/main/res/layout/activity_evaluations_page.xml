<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F4F8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evaluations Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Division"
        android:textColor="#34495E"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/divisionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Existing Evaluations"
        android:textColor="#34495E"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/evaluationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/addNewEvalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a New Evaluation"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3498DB"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/editExistingEvalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Existing Evaluation"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2ECC71"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E74C3C"
        android:textColor="@android:color/white"/>

</LinearLayout>